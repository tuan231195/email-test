{
	"name": "email-test",
	"version": "0.0.0-development",
	"description": "",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"repository": {
		"url": "git@github.com:tuan231195/email-test.git"
	},
	"scripts": {
		"dev": "run-p -l dev:*",
		"dev:client": "cd client && npm start",
		"dev:server": "nodemon src/mocks/local-server.ts",
		"dev:worker": "nodemon src/mocks/local-worker.ts",
		"build": "rm -rf dist && ttsc",
		"prepackage": "npm run build",
		"package": "cpyspec",
		"commit": "git-cz",
		"prepare": "npm run build",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"lint": "eslint 'src/**/*.{ts,js}'",
		"prettier:check": "prettier --check 'src/**/*.{ts,js}'",
		"validate": "run-s test:coverage lint prettier:check",
		"ci:validate": "rm -rf node_modules && npm ci && npm run validate"
	},
	"license": "MIT",
	"devDependencies": {
		"@types/aws-lambda": "^8.10.72",
		"@types/config": "0.0.38",
		"@types/express": "^4.17.11",
		"@types/ioredis": "^4.19.4",
		"@types/jest": "25.1.4",
		"@types/pino": "^6.3.6",
		"@typescript-eslint/eslint-plugin": "2.22.0",
		"@typescript-eslint/parser": "2.22.0",
		"body-parser": "^1.19.0",
		"cors": "^2.8.5",
		"eslint": "6.8.0",
		"eslint-config-prettier": "6.10.0",
		"eslint-plugin-prettier": "3.1.2",
		"express": "^4.17.1",
		"husky": "^4.2.3",
		"jest": "25.1.0",
		"jest-createspyobj": "^2.0.0",
		"lint-staged": "10.0.8",
		"nodemon": "^2.0.7",
		"npm-run-all": "4.1.5",
		"prettier": "1.19.1",
		"sqs-consumer": "^5.5.0",
		"ts-jest": "25.2.1",
		"ts-node": "^9.1.1",
		"tsconfig-paths": "^3.9.0",
		"ttypescript": "1.5.10",
		"typescript": "3.8.3",
		"typescript-transform-paths": "1.1.14"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "npm run validate"
		}
	},
	"lint-staged": {
		"**/*.{js,ts}": [
			"prettier --write",
			"eslint --fix"
		],
		"**/*.{json,html,css,yml}": [
			"prettier --write"
		]
	},
	"dependencies": {
		"aws-lambda": "^1.0.6",
		"aws-sdk": "^2.849.0",
		"axios": "^0.21.1",
		"config": "^3.3.3",
		"cpyspec": "^1.0.3",
		"dompurify": "^2.2.6",
		"dotenv": "^8.2.0",
		"ioredis": "^4.22.0",
		"jsdom": "^16.4.0",
		"lodash": "^4.17.21",
		"pino": "^6.11.1",
		"pino-pretty": "^4.5.0",
		"reflect-metadata": "^0.1.13",
		"typedi": "^0.10.0",
		"uuid": "^8.3.2",
		"yup": "^0.32.9",
		"yup-decorator": "^2.2.0"
	},
	"copySpec": {
		"verbose": false,
		"progress": false,
		"files": [
			{
				"from": "package.json",
				"to": "dist/package.json"
			},
			{
				"from": "package-lock.json",
				"to": "dist/package-lock.json"
			}
		]
	}
}
